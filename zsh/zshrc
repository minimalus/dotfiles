source /usr/share/zsh-antigen/antigen.zsh

# Load the oh-my-zsh's library.
antigen use oh-my-zsh

# Bundles from the default repo (robbyrussell's oh-my-zsh).
antigen bundle git
antigen bundle heroku
antigen bundle pip
antigen bundle lein
antigen bundle command-not-found
antigen bundle z # jump to "frecently" used folders / files

# Syntax highlighting bundle.
antigen bundle zsh-users/zsh-syntax-highlighting

# Load the theme.
antigen theme agnoster

# Tell Antigen that you're done.
antigen apply

# Map caps lock to ctrl
setxkbmap -layout us -option ctrl:nocaps                                                                                                  

# for thefuck: Magnificent app which corrects your previous console command
eval $(thefuck --alias)

# setup fuzzy finder
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

# setup pyenv automatically by adding
export PATH="$HOME/.pyenv/bin:$PATH"
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"

# folder of all of your autocomplete functions
fpath=($HOME/.zsh-completions $fpath)

# enable autocomplete function
autoload -U compinit
compinit

# enable warning message of zsh completions
zstyle ':completion:*' verbose yes
zstyle ':completion:*:messages' format '%d'
zstyle ':completion:*:warnings' format 'No matches for: %d'

# bmw
source /opt/ros/kinetic/setup.zsh
source ~/autonomous_driving/devel_dev_debug/setup.zsh
#source ~/autonomous_driving_had/devel_dev_debug/setup.zsh

# fix encoding errors terminator
export VTE_VERSION="100"
